<form {{action "login" on="submit"}}>
  <div class="form-group">
    <label>Email address</label>
    <div>{{input value=email type="text" class="form-control" placeholder="Email"}}</div>
  </div>
  <div class="form-group">
    <label>Password</label>
    <div>{{input value=password type="password" class="form-control" placeholder="Password"}}</div>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>